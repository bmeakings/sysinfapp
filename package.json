{
  "name": "sysinfapp",
  "author": "Ben Meakings",
  "description": "",
  "license": "",
  "repository": "",
  "version": "0.0.1",
  "main": "main.js",
  "scripts": {
    "build": "electron-builder --linux --macos --windows --publish always",
    "start": "electron ."
  },
  "devDependencies": {},
  "dependencies": {
    "electron-updater": "^4.6.5",
    "systeminformation": "^5.11.2"
  },
  "build": {
    "appId": "com.test.app",
    "productName": "sysinfo",
    "copyright": "Copyright Â© Ben Meakings",
    "directories": {
      "output": "dist"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "/sysinfapp",
        "channel": "latest"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "type": "distribution",
      "artifactName": "${name}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": "x64"
        },
        {
          "target": "tar.xz",
          "arch": "x64"
        }
      ],
      "artifactName": "${name}.${ext}"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": "ia32"
        }
      ],
      "certificateSubjectName": "support@ocs-software.com"
    },
    "nsis": {
      "include": "build/custom.nsh",
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "artifactName": "${name}_install.${ext}",
      "uninstallDisplayName": "${productName}"
    }
  }
}
